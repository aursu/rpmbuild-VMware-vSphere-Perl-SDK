FROM aursu/rpmbuild:7-build-root

USER root
RUN yum -y install \
        perl-Archive-Zip \
        perl-Crypt-SSLeay \
        perl-ExtUtils-Install \
        perl-ExtUtils-MakeMaker \
        perl-HTML-Parser \
        perl-IO-Socket-INET6 \
        perl-LWP-Protocol-https \
        perl-libwww-perl \
        perl-Module-Build \
        perl-Net-HTTP \
        perl-Net-INET6Glue \
        perl-Path-Class \
        perl-Socket6 \
        perl-Text-Template \
        perl-Time-Piece \
        perl-Try-Tiny \
        perl-version \
        perl-XML-SAX \
        perl-XML-NamespaceSupport \
        perl-XML-LibXML \
        perl-devel \
        e2fsprogs \
        e2fsprogs-devel \
        libuuid-devel \
        openssl \
        openssl-devel \
        glibc.i686 \
        zlib.i686 \
    && yum clean all && rm -rf /var/cache/yum

RUN yum -y --enablerepo=bintray-custom install \
        perl-UUID \
    && yum clean all && rm -rf /var/cache/yum
